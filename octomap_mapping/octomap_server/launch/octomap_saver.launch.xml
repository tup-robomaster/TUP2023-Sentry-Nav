<!--
  Example launch file for octomap_server mapping:
  Listens to incoming PointCloud2 data and incrementally builds an octomap.
  The data is sent out in different representations.

  Copy this file into your workspace and adjust as needed, see
  www.ros.org/wiki/octomap_server for details
-->
<launch>
	<node pkg="octomap_server" exec="octomap_saver_node" name="octomap_saver">
		<param name="resolution" value="0.1" />

		<!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
		<param name="frame_id" value="odom" />


		<!-- data source to integrate (PointCloud2) -->
		<remap from="cloud_in" to="/lio_sam/mapping/cloud_registered_raw" />

		<param name="point_cloud_max_z" value="0.1" />
		<param name="point_cloud_min_z" value="-0.1" />
		<param name="octomap_path" value="/home/tup/ros2_ws/src/TUP2023-Sentry-Framework/TUP2023-Sentry-Nav/dll/maps/133.bt" />

	</node>
</launch>
